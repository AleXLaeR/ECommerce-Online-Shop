<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>"
      method="post" enctype="multipart/form-data">
    <article>
        <label for="title">Title</label>
        <input type="text" id="title" name="title"
               value="<%= product.title %>" required>
    </article>
    <div id="image-upload-control">
        <article id="image-area">
            <label for="image">Image</label>
            <input type="file" id="image" name="image"
                   accept="image/png,image/jpg"
                   <%if (isImageRequired) { %>required<% } %>
            >
        </article>
        <img id="preview-image" src="" alt="Selected image.">
    </div>
    <article>
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary"
               value="<%= product.summary %>" maxlength="250"
               required>
    </article>
    <article>
        <label for="price">Price</label>
        <input type="number" id="price" name="price"
               min=0.01" step="0.05"
               value="<%= product.price %>" required>
    </article>
    <article>
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="8" required><%= product.description %></textarea>
    </article>
    <article id="control-btns">
        <button class="btn btn-alt" type="reset">Reset</button>
        <button class="btn" type="submit">Submit</button>
    </article>
</form>
